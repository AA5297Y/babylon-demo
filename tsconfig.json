{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noResolve": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "preserveConstEnums":true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "ESNext"
    ],
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"]
    },
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }